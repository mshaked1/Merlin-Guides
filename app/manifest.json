  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest"
  ]
}
